<tr style="background-color:rgba(255, 255, 255, 0.878)">
    <td>
        <small>{{this.appointment_id.name.last}}, {{this.appointment_id.name.first}}
            {{this.appointment_id.name.middle}}</small>
    </td>
    <td style="text-center">
        <small>{{this.appointment_id.address}}</small>
    </td>
    <td class="text-center">
        <small>{{this.appointment_id.sex}}</small>
    </td>
    <td class="text-center">
        <small>{{dateFormat this.appointment_id.birthdate "YYYY-MM-DD"}}</small>
    </td>
    <td class="text-center">
        <small>{{dateFormat this.appointment_date "h:mm a"}}</small>
    </td>
    <td style="text-align:justify">
        <small>{{this.appointment_name}}</small>
    </td>
    <td class="text-center">
        {{!-- <small><a class="btn btn-danger" role="button" data-toggle="modal"
                data-target="#a{{_id}}">Remove</a></small> --}}

        <small><button class="btn btn-success" type="button" style="font-size:10px; margin-bottom: 7px" data-id={{_id}}
                data-toggle="modal" data-target="#a{{_id}}"><span style="font-size: 15px;"><i
                        class="fas fa-pen"></i></span></button></small>
    </td>
</tr>

{{!-- Remove Participant Modal --}}
<div class="modal fade" id="a{{_id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="exampleModalLongTitle">Confirm Cancel</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="removeParticipant" method="post" action="/remove">
                    <input type="hidden" value="{{this.user._id}}" name="user_id" id="user_id" />
                    <input type="hidden" value="{{this.user.name.first}}" name="fname" id="fname" />
                    <input type="hidden" value="{{this.user.name.middle}}" name="mname" id="mname" />
                    <input type="hidden" value="{{this.user.name.last}}" name="lname" id="lname" />
                    <input type="hidden" value="{{this.healthprogram._id}}" name="hp_id" id="hp_id" />
                    <input type="hidden" value="{{this.healthprogram.hp_name}}" name="hp_name" id="hp_name" />
                    <p style="text-align:left; padding: 10px">Are you sure you want to <span
                            style="color:red">remove</span> {{this.user.name.last}}, {{this.user.name.first}}
                        {{this.user.name.middle}} in {{this.healthprogram.hp_name}}?</p>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-danger" id="programsave">Confirm</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>