<style>
    body {
        background-color: #F8FCFF;
    }

    form label {
        font-weight: bold;
    }

    textarea {
        resize: none;
    }

    #container {
        display: flex;
        justify-content: left;
        height: 250px;
        text-align: center;
        margin-top: -20px;
    }

    .container2 {
        height: auto;
        width: 250px;
        padding-top: 40px;
    }

    .container3 {
        height: auto;
        width: 510px;
        padding-left: 50px;
        padding-top: 70px;
        margin-left: -30px;
    }

    .img-circle {
        width: 150px;
        height: 150px;
        border: 4px solid none;
        border-radius: 50%;
    }

    .dropdown {
        position: relative;
        display: inline-block;
        cursor: pointer;
    }

    input[type="radio"]:checked+.showdate {
        display: block;
    }

    input[type="radio"]+.details {
        display: none;
    }

    input[type="radio"]+.temp {
        display: none;
    }

    input[type="radio"]:checked+.showrate {
        display: block;
    }

    input[type="radio"]+label + .showother {
        display: none;
    }

    input[type="radio"]:checked+label+.showother {
        display: block;
    }

    .form-upload {
        display: flex;
    }

    .card {
        margin-left: 30px;
        margin-right: 30px;
        border: none;
    }

    @media only screen and (max-width: 726px) {
        .shrink {
            font-size: 50px !important;
        }

        .card {
            width: 80% !important;
            margin: 0 auto;
        }

        .form-upload {
            display: block;
        }
    }

    .h1 {
    font-weight: 800;
    color: #2f353e;
    }

    .gradient-text {
        /*background: -webkit-linear-gradient(18deg, rgba(110,231,128,1) 0%, rgba(0,212,255,1) 100%);*/

        background: -webkit-linear-gradient(18deg, rgba(40,70,105,1) 0%, rgba(73,150,241,1) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
</style>

<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/6f00e67846.js" crossorigin="anonymous"></script>
</head>

<body>
<p class="h1 shrink gradient-text" style="font-size: 70px; text-align: center; margin-top: 4rem;">DoliMed <i class="far fa-hospital"></i></p>

<form class="dirty" id="form" method="POST" action="/register" enctype="multipart/form-data">
    <div class="card mx-auto border shadow-sm" style="width: 50rem; margin-bottom: 2rem;">
        <div class="card-body">
            <div class="card-title" style="font-size: 42px;">Account Information<span class="text-danger"> *</span></div>
            <p style="font-style: italic; font-size: 16px; margin-top: -16px;"></p>
            <small class="text-danger">* Required fields</small>
            <div class="card-text">
                <div class="form-group">
                    <div class="form-group">
                        <label for="phone">Email<span class="text-danger"> *</span></label>
                        <input type="text" class="form-control" id="phone" name="phone" placeholder="Email" style="margin-bottom: 25px;"
                            value="" />
                        <p style="color: red;">
                           
                        </p>
                    </div>
                    <div class="form-group">
                        <label for="phone">Password<span class="text-danger"> *</span></label>
                        <input type="text" class="form-control" id="phone" name="phone" placeholder="Password" style="margin-bottom: 25px;"
                            value="" />
                        <p style="color: red;">
                           
                        </p>
                    </div>
                    <div class="form-group">
                        <label for="phone">Confirm Password<span class="text-danger"> *</span></label>
                        <input type="text" class="form-control" id="phone" name="phone" placeholder="Confirm Password" style="margin-bottom: 25px;"
                            value="" />
                        <p style="color: red;">
                           
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card mx-auto border shadow-sm" style="width: 50rem; margin-bottom: 2rem;">
        <div class="card-body">
            <div class="card-title" style="font-size: 42px;">Contact Information<span class="text-danger"> *</span>
            </div>
            <p style="font-style: italic; font-size: 16px; margin-top: -16px;">Tell us about yourself and how we can contact you.</p>
            <small class="text-danger">* Required fields</small>
            <div class="card-text">
                <div class="form-group">
                    <div class="row">
                        <div class="col pr-2">
                            <label for="fname">First Name<span class="text-danger"> *</span></label>
                            <input type="text" class="form-control" id="fname" name="fname" aria-describedby="emailHelp"
                                placeholder="First Name" value="" />
                            <p style="color: red;">
                               
                            </p>
                        </div>
                        <div class="col pr-2">
                            <label for="fname">Middle Name<span class="text-danger"> *</span></label>
                            <input type="text" class="form-control" id="fname" name="fname" aria-describedby="emailHelp"
                                placeholder="First Name" value="" />
                            <p style="color: red;">
                               
                            </p>
                        </div>
                        <div class="col pl-2">
                            <label for="lname">Last Name<span class="text-danger"> *</span></label>
                            <input type="text" class="form-control" id="lname" name="lname" aria-describedby="emailHelp"
                                placeholder="Last Name" value="" />
                            <p style="color: red;">
                                
                            </p>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-12" style="margin-top: 15px;">
                                <label for="streetAdd">Home Address<span class="text-danger"> *</span></label>
                                <input type="text" class="form-control" id="streetAdd" name="streetAdd"
                                    aria-describedby="emailHelp" placeholder="Home Address"
                                    value="" />
                                <p style="color: red;">
                                    
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-4 ">
                                <label for="date">Date of Birth<span class="text-danger"> *</span></label>
                                 <input type="date" class="form-control" id="date" name="date"
                                    aria-describedby="emailHelp" placeholder="Date of Birth"
                                    value="" />

                                <p style="color: red;">
                                    
                                </p>
                            </div>
                            <div class="col-3">
                                <label for="phone">Phone Number<span class="text-danger"> *</span></label>
                                <input type="text" class="form-control" id="phone" name="phone"
                                    aria-describedby="emailHelp" placeholder="Phone Number"
                                    value="" />

                                <p style="color: red;">
                                  
                                </p>
                            </div>
                            <div class="col-5">
                                <label style="margin-left: -15px; margin-right: 20px">Gender<span class="text-danger"> *</span></label>
                                <div class="row">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="gender" id="Front Desk" value="Front Desk"/>
                                        <label for="Front Desk" style="font-weight: normal; margin-right: 5px;">Male</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="gender" id="Front Desk" value="Female"/>
                                        <label for="Front Desk" style="font-weight: normal; margin-right: 5px;">Female</label>
                                    </div>
                                    <div class="form-check col-20 ">
                                        <input class="form-check-input" type="radio" value="Others" id="Others" name="gender">
                                        <label for="s-other" style="font-weight: normal; margin-right: 5px;"> Others </label>
                                        <div class="form-check col-1 showother" style="margin-top: -45px; margin-left: 35px">
                                            <input type="text" class="form-control" style="width: 103px" id="otherAnswer" name="otherAnswer" value="" placeholder="" />
                                            <p style="color: red;"></p>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            
                        </div>
                    </div>
                
                    <div class="form-group">
                        <div class="row">
                            <div class="col-12" style="margin-top: 5px;">
                                <label for="streetAdd">Name of Emergency Contact Person<span class="text-danger"> *</span></label>
                                <input type="text" class="form-control" id="streetAdd" name="streetAdd"
                                    aria-describedby="emailHelp" placeholder="Name of Emergency Contact Person"
                                    value="" />
                                <p style="color: red;">
                                    
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-7">
                                <label for="streetAdd">Emergency Contact Person Number<span class="text-danger"> *</span></label>
                                 <input type="text" class="form-control" id="streetAdd" name="streetAdd"
                                    aria-describedby="emailHelp" placeholder="Emergency Contact Person Number"
                                    value="" />

                                <p style="color: red;">
                                    
                                </p>
                            </div>
                            <div class="col-5">
                                <label for="streetAdd">Relationship<span class="text-danger"> *</span></label>
                                <input type="text" class="form-control" id="streetAdd" name="streetAdd"
                                    aria-describedby="emailHelp" placeholder="Relationship"
                                    value="" />

                                <p style="color: red;">
                                  
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card mx-auto border shadow-sm" style="width: 50rem; margin-bottom: 2rem;">
        <div class="card-body">
            <div class="card-title" style="font-size: 42px;">Past Medical History<span class="text-danger"> *</span></div>
            <p style="font-style: italic; font-size: 16px; margin-top: -16px;"></p>
            
        </div>
    </div>

</form>

</body>