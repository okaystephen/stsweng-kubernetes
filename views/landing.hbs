<style>
    .link {
        color: #fff;
        text-decoration: none;
        display: inline-block;
        position: relative;
    }

    .link:after {
        background: none repeat scroll 0 0 transparent;
        bottom: 0;
        content: "";
        display: block;
        height: 2px;
        left: 50%;
        position: absolute;
        background: #fff;
        transition: width 0.3s ease 0s, left 0.3s ease 0s;
        width: 0;
    }

    .link:hover:after {
        width: 100%;
        left: 0;
    }

    .shadow {
        transition: box-shadow .3s;
        position: relative;
        z-index: 10;
    }

    .shadow:hover {
        box-shadow: 0 0 11px rgba(33, 33, 33, .2);
    }
</style>

