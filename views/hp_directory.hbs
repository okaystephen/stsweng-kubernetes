<style>
    th {
        color: #2F8250 !important;
    }
</style>

<div class="container-fluid p-5">
    <div class="row">
        <div class="col">
            <p class="h1" style="color: #2F8250 ; font-family: 'Montserrat', sans-serif; font-size:13vh;">Health
                Programs</p>
            <p style="color: #5C6B6B ; font-family: 'Montserrat', sans-serif;">Insert caption here.
            </p>
            <div class="card ">
                {{#if alert}}
                <div class="alert alert-success hide" style="margin-bottom: 1px;">You have <span style="font-weight: bold; text-decoration:underline">successfully registered</span> to
                    {{test}}. Please check your dashboard.</div>
                {{/if}}
                {{#if error}}
                <div class="alert alert-danger hide" style="margin-bottom: 1px;">Registration failed: You tried
                    submitting an empty field. Please try again.</div>
                {{/if}}
                {{#if max}}
                <div class="alert alert-danger hide" style="margin-bottom: 1px;">Registration failed: {{test}} has already reached the maximum number of participants.</div>
                {{/if}}
                <div class="card-body" style="color: #5C6B6B ; font-family: 'Montserrat', sans-serif; background-color:rgba(255, 255, 255, 0.878)">
                    <div class="table-responsive text-center">
                        <table class="table text-left blog-project-table" id="hp-table">
                            <thead class=" text-primary">
                                <th style="width:20%">
                                    Name
                                </th>
                                <th style="width:30%">
                                    Description
                                </th>
                                <th class="text-center" style="width:15%">
                                    Start Date
                                </th>
                                <th class="text-center" style="width:15%">
                                    End Date
                                </th>
                                <th class="text-center" style="width:15%">
                                    Location
                                </th>
                                <th class="text-center" style="width:5%">
                                    Cap
                                </th>
                                <th class="text-center" style="width:5%">

                                </th>
                            </thead>
                            <tbody id="entries-table">
                                {{#each healthprogramsContent}}
                                {{> healthprogramCard admin_active = ../admin_active user_active = ../user_active participants_count = this.participants.length user = ../user_id}}
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


